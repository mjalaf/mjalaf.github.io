---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main role="main" class="max-w-6xl mx-auto">
			<!-- Hero Section -->
			<section class="flex flex-col items-start py-16 max-xl:px-4 max-lg:px-4 max-sm:px-4 max-sm:items-center max-sm:text-center">
				<h1 class="text-4xl font-bold tracking-tight text-zinc-300 max-sm:text-2xl">
					Hi, I'm <span class="text-blue-500">Martin Jalaf</span> ðŸ‘‹
				</h1>
				<p class="mt-6 text-lg text-zinc-400 max-w-2xl max-sm:mt-3 max-sm:text-base">
					Solution Architect in Industry Solution Delivery (ISD), with 20+ years in technology.
I help organizations navigate architectural complexity, reduce risk in large programs, and align cloud strategy with real business outcomes.
Working across the Americas, supporting both U.S. and LATAM enterprise customers.
				</p>
				<div class="flex flex-row mt-6 gap-4 max-sm:justify-center">
					<a
						href="/blog"
						class="flex flex-row w-fit rounded-lg border px-5 py-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white border-blue-500 text-blue-500 no-underline max-sm:px-3 max-sm:text-sm"
					>
						View Blog
					</a>
					<a
						href="/about"
						class="flex flex-row w-fit rounded-lg border px-5 py-2 transition-colors duration-300 hover:bg-blue-500 hover:text-white border-blue-500 text-blue-500 no-underline max-sm:px-3 max-sm:text-sm"
					>
						About Me
					</a>
				</div>
			</section>

			<!-- Recent Posts -->
			<section class="max-2xl:px-0 max-xl:px-4 max-lg:px-4 max-sm:px-4 pb-16">
				<div class="flex justify-between items-center mb-6">
					<h3 class="text-2xl font-normal text-gray-300">Most recent articles</h3>
					<a href="/blog" class="text-xl text-blue-500 no-underline hover:underline">View all &rarr;</a>
				</div>
				<div class="mx-auto max-w-full py-5 grid gap-6 sm:grid-cols-2">
					{
						posts.map((post) => (
							<article class="group relative w-full rounded-2xl bg-zinc-900/60 p-6 transition hover:bg-zinc-900/80 hover:shadow-xl hover:shadow-black/30">
								<a href={`/blog/${post.id}/`} class="no-underline" aria-label={post.data.title}>
									<div class="relative z-20">
										<div class="mb-3 flex items-center gap-3 text-sm text-zinc-400">
											<FormattedDate date={post.data.pubDate} />
										</div>
										<h2 class="text-xl font-semibold leading-snug text-zinc-100 transition group-hover:text-violet-400">
											{post.data.title}
										</h2>
										{post.data.description && (
											<p class="mt-3 text-sm leading-relaxed text-zinc-400">
												{post.data.description.slice(0, 100)}{post.data.description.length > 100 ? "..." : ""}
											</p>
										)}
									</div>
								</a>
							</article>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
