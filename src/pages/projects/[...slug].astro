---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';

export async function getStaticPaths() {
	const projects = await getCollection('projects');
	return projects.map((project) => ({
		params: { slug: project.id },
		props: project,
	}));
}
type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { title, description, github } = project.data;
const { Content } = await render(project);
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M4LH8GS" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<Header />
		<main class="container mx-auto py-12 max-w-6xl">
			<div class="max-xl:py-10 max-xl:px-4 max-lg:py-10 max-lg:px-4 max-sm:py-10 max-sm:px-4">
				<article class="prose prose-invert max-w-none md:px-0 py-12">
					<!-- Header -->
					<header class="mb-6">
						<div class="flex items-center gap-4 mb-3">
							<a href="/projects" class="text-sm text-blue-500 no-underline hover:underline">&larr; All Projects</a>
						</div>

						<h1 class="text-4xl font-bold leading-tight mb-4 text-white">
							{title}
						</h1>

						<p class="text-lg text-zinc-400">{description}</p>

						{github && (
							<div class="mt-4">
								<a href={github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-lg border border-zinc-700 px-4 py-2 text-sm text-zinc-300 no-underline hover:bg-zinc-800 transition">
									<svg viewBox="0 0 16 16" width="16" height="16" aria-hidden="true">
										<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
									</svg>
									View on GitHub
								</a>
							</div>
						)}
					</header>

					<!-- Content -->
					<section class="mdx-content">
						<Content />
					</section>
				</article>
			</div>
		</main>
		<Footer />

		<!-- Mermaid.js for flowcharts/diagrams -->
		<script is:inline>
			document.addEventListener('DOMContentLoaded', function () {
				var pres = document.querySelectorAll('pre[data-language="mermaid"]');
				if (pres.length === 0) return;
				var script = document.createElement('script');
				script.type = 'module';
				script.textContent = `
					import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs';
					mermaid.initialize({ startOnLoad: false, theme: 'dark' });
					document.querySelectorAll('pre[data-language="mermaid"]').forEach(function (pre) {
						var code = pre.querySelector('code');
						var div = document.createElement('div');
						div.className = 'mermaid';
						div.textContent = code ? code.textContent : pre.textContent;
						pre.parentElement.replaceChild(div, pre);
					});
					await mermaid.run();
				`;
				document.body.appendChild(script);
			});
		</script>
	</body>
</html>
