---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const projects = await getCollection('projects');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects - ${SITE_TITLE}`} description="Projects and documentation by Martin Jalaf" />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M4LH8GS" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<Header />
		<main role="main" class="max-w-6xl mx-auto">
			<!-- Hero Section -->
			<section class="flex flex-col items-start py-16 max-xl:px-4 max-lg:px-4 max-sm:px-4 max-sm:items-center max-sm:text-center">
				<h1 class="text-4xl font-bold tracking-tight text-zinc-300 max-sm:text-2xl">
					<span class="text-blue-500">Projects</span>
				</h1>
				<p class="mt-6 text-lg text-zinc-400 max-w-2xl max-sm:mt-3 max-sm:text-base">
					Documentation and resources for my projects.
				</p>
			</section>

			<!-- Projects Grid -->
			<section class="mx-auto max-w-7xl py-10 pt-5 max-2xl:px-0 max-xl:px-4 max-lg:px-4 max-sm:px-4 pb-16">
				<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
					{
						projects.map((project) => (
							<article class="group relative w-full rounded-2xl bg-zinc-900/60 p-6 transition hover:bg-zinc-900/80 hover:shadow-xl hover:shadow-black/30">
								<a href={`/projects/${project.id}/`} class="absolute inset-0 z-10 rounded-2xl" aria-label={project.data.title}></a>
								<div class="relative z-20 pointer-events-none">
									<h2 class="text-xl font-semibold leading-snug text-zinc-100 transition group-hover:text-violet-400">
										{project.data.title}
									</h2>
									<p class="mt-3 text-sm leading-relaxed text-zinc-400">
										{project.data.description}
									</p>
									{project.data.github && (
										<div class="mt-4 pointer-events-auto">
											<a href={project.data.github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-xs text-zinc-300 no-underline hover:text-white transition">
												<svg viewBox="0 0 16 16" width="14" height="14" aria-hidden="true">
													<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
												</svg>
												View on GitHub
											</a>
										</div>
									)}
								</div>
							</article>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
