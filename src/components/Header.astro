---
import { SITE_TITLE } from '../consts';

const navItems = [
	{ label: 'Home', href: '/' },
	{ label: 'Blog', href: '/blog' },
	{ label: 'Snippets', href: '/snippets' },
	{ label: 'Projects', href: '/projects' },
	{ label: 'About', href: '/about' },
];
---

<header class="sticky top-4 z-50 px-4">
	<nav
		class="relative mx-auto max-w-6xl h-14
		grid grid-cols-[auto_1fr_auto] items-center
		rounded-xl
		bg-zinc-800/90
		px-5 py-3
		backdrop-blur-sm
		shadow-[0_0_15px_rgba(255,255,255,0.5)] shadow-blue-300"
	>
		<!-- Logo -->
		<a href="/" class="flex items-center gap-2 font-semibold text-zinc-100">
			<h2 class="text-blue-500 font-semibold text-base m-0">{SITE_TITLE}</h2>
		</a>

		<!-- Desktop nav -->
		<ul class="hidden md:flex justify-center gap-6 text-sm text-zinc-200 list-none m-0 p-0">
			{navItems.map((item) => (
				<li>
					<a
						href={item.href}
						class="text-base opacity-80 transition hover:opacity-100 no-underline text-zinc-200"
					>
						{item.label}
					</a>
				</li>
			))}
		</ul>

		<!-- Social links (desktop) -->
		<div class="hidden md:flex items-center gap-3">
			<a href="https://github.com/mjalaf" target="_blank" title="GitHub" class="text-zinc-400 hover:text-white transition">
